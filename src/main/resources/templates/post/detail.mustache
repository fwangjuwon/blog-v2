  
{{> /layout/header}}

<!-- 컨테이너 시작 -->
<div class="container mt-3">
    <input id="postId" type="hidden" value="{{postId}}">
    <!-- 상세정보보기 시작 -->
    <div class="mb-3">
        작성자: <span id="username"> </span> 
    </div>
    <div class="mb-3 mt-3">
        <h1 id="title"> </h1>
    </div>
    <hr />
    <div id="content" class="mb-3">
    </div>
   <div id="auth-box"  style="display: none;">
    <a href="/s/post/1/updateForm" class="btn btn-success">수정</a>
    <button id="btn-delete" class="btn btn-success">삭제</button>
</div>
    <!-- 상세정보보기 끝 -->

     <!-- 댓글 시작 -->
     
        <div class="card">
            <form action = "/s/post/{{postId}}/comment" method ="post">
                <div class="card-body">
                    <textarea name = "content" class="form-control" rows="1"></textarea>
                </div>
                <div class="card-footer">
                    <button type="submit"  class="btn btn-primary">등록</button>
                </div>
            </form>
        </div>
        <br />
    
        <div class="card">
            <div class="card-header"><b>댓글 리스트</b></div>
            <ul id="reply-box" class="list-group">
                <li id="reply-1" class="list-group-item d-flex justify-content-between">
                    <div>댓글입니다</div>
                    <div class="d-flex">
                        <div class="font-italic">작성자 : 홍길동 &nbsp;</div>
                        <button class="badge bg-primary">삭제</button>
                    </div>
                </li>
            </ul>
        </div>
        <br />
        <!-- 댓글 끝 -->
</div>
<!-- 컨테이너 끝 -->


<script src="/js/post.js"></script>

{{> /layout/footer}}